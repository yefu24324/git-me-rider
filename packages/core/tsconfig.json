{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client", "@types/node"],
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "paths": {
      "@/components/*": ["./src/*"]
    }
  }
}
